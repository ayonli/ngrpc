{
  "name": "@hyurl/grpc-boot",
  "version": "1.0.0",
  "description": "Make it easy to create standalone and elegant gRPC based applications.",
  "main": "index",
  "scripts": {
    "prepublishOnly": "tsc",
    "postpublish": "node postpublish.js",
    "protoc:go": "protoc --go_out=. --go_opt=paths=source_relative --go-grpc_out=. --go-grpc_opt=paths=source_relative services/*.proto",
    "pretest": "tsc",
    "posttest": "node postpublish.js",
    "test": "mocha test.js",
    "test:ts": "mocha -r ts-node/register test.ts"
  },
  "bin": {
    "grpc-boot": "dist/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hyurl/grpc-boot.git"
  },
  "keywords": [
    "grpc"
  ],
  "author": "A-yon Lee <the@ayon.li>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hyurl/grpc-boot/issues"
  },
  "homepage": "https://github.com/hyurl/grpc-boot#readme",
  "dependencies": {
    "@grpc/grpc-js": "^1.9.0",
    "@grpc/proto-loader": "^0.7.8",
    "@hyurl/grpc-async": "^1.0.0",
    "commander": "^11.0.0",
    "humanize-duration": "^3.29.0",
    "is-socket-reset-error": "^0.1.1",
    "lodash": "^4.17.21",
    "require-chain": "^2.0.0",
    "source-map-support": "^0.5.21",
    "string-hash": "^1.1.3"
  },
  "devDependencies": {
    "@types/humanize-duration": "^3.27.1",
    "@types/mocha": "^10.0.1",
    "@types/source-map-support": "^0.5.6",
    "@types/string-hash": "^1.1.1",
    "dotry": "^1.4.0",
    "mocha": "^10.2.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
